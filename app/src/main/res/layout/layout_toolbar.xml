<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar_root_layout"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    android:divider="@drawable/layout_divider_8dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:showDividers="middle|beginning|end">

    <ImageView
        android:id="@+id/left_action"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        android:src="@drawable/ic_baseline_arrow_back_white" />

    <TextView
        android:id="@+id/toolbar_title"
        style="@style/HeadingLargeTextView"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/margin_8dp"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/right_action"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        android:visibility="invisible"
        tools:visibility="visible" />

</LinearLayout>