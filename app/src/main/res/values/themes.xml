<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.DigitalTracking" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/color_primary_dark</item>
        <!-- Custom App Theme-->
        <item name="android:buttonStyle">@style/PrimaryButton</item>
        <item name="android:textViewStyle">@style/NormalTextView</item>
        <item name="android:textColor">@color/color_text_primary</item>

    </style>

    <style name="HeadingLargeTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_text_heading</item>
    </style>

    <style name="HeadingMediumTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="NormalTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_text_primary</item>
    </style>

    <style name="SmallTextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_text_primary</item>
    </style>


    <style name="PrimaryButton" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_button_primary</item>
    </style>

    <style name="SecondaryButton" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:textColor">@color/color_text_heading_theme</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_button_secondary</item>
    </style>

    <style name="RadioButton" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:textColor">@color/color_text_heading_theme</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_button_secondary</item>
    </style>


    <style name="TextViewButton" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/margin_48dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingStart">@dimen/margin_16dp</item>
        <item name="android:paddingEnd">@dimen/margin_16dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

</resources>